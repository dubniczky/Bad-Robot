# http://editorconfig.org

root = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
insert_final_newline = true
end_of_line = lf
